
#include<stdio.h>
#include<stdlib.h>

int main()
{
    int n,i,j;
    printf("Enter the number of vertices : ");
    scanf("%d",&n);
    int a[n][n];
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            a[i][j]=0;
        }
    }
    int ch;
    do
    {
        printf("Enter the vertices to be connected : ");
        scanf("%d%d",&i,&j);
        a[i][j]=1;
        printf("Do you want to continue (1/0) : ");
        scanf("%d",&ch);
    }while(ch==1);
    printf("The adjacency matrix is : ");
    for(i=0;i<n;i++)
    {
        printf(" ");
        for(j=0;j<n;j++)
        {
            printf("%d ",a[i][j]);
        }
        printf(" ");
    }
    int ch1;
    do
    {
        printf(" Enter your choice : ");
        printf(" 1. Depth first traversal");
        printf(" 2. Breadth first traversal");
        scanf("%d",&ch1);
        switch(ch1)
        {
            case 1:
            {
                int visited[n];
                for(i=0;i<n;i++)
                {
                    visited[i]=0;
                }
                printf("Enter the starting vertex : ");
                scanf("%d",&i);
                printf("The depth first traversal is : ");
                dfs(a,n,i,visited);
                break;
            }
            case 2:
            {
                int visited[n];
                for(i=0;i<n;i++)
                {
                    visited[i]=0;
                }
                printf("Enter the starting vertex : ");
                scanf("%d",&i);
                printf("The breadth first traversal is : ");
                bfs(a,n,i,visited);
                break;
            }
        }
        printf("Do you want to continue (1/0) : ");
        scanf("%d",&ch);
    }while(ch==1);
    return 0;
}
